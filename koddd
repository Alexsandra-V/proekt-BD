CREATE TABLE ycheniki (
    ycheniki_id SERIAL PRIMARY KEY,
    imya VARCHAR(300),
    telefon BIGINT,
    bancovscaya_karta BIGINT,
    id_yrovnya int,
    id_kyrsa int,
    id_ychitel int,
    FOREIGN KEY (id_yrovnya) REFERENCES yroven (id_yrovnya),
    FOREIGN KEY (id_kyrsa) REFERENCES kyrsi (id_kyrsa),
    FOREIGN KEY (id_ychitel) REFERENCES ychitel (id_ychitel)

);
CREATE TABLE yroven (
    id_yrovnya SERIAL PRIMARY KEY,
    nazvanie VARCHAR(300)
);
CREATE TABLE kyrsi (
    id_kyrsa SERIAL PRIMARY KEY,
    nazvanie VARCHAR(300),
    kolichestvo_yrokov int,
    cena int,
    id_yrovnya int,
    Foreign Key (id_yrovnya) REFERENCES yroven (id_yrovnya)
);
CREATE TABLE ychitel (
    id_ychitel SERIAL PRIMARY KEY,
    imya VARCHAR(300),
    telefon BIGINT
);
CREATE TABLE yroki (
    id_yroka SERIAL PRIMARY KEY,
    data DATE,
    vremya_nachala int,
    dlitelnost int,
    id_kyrsa int,
    id_ychitel int,
    Foreign Key (id_kyrsa) REFERENCES  kyrsi(id_kyrsa),
    Foreign Key (id_ychitel) REFERENCES ychitel(id_ychitel)
);
CREATE TABLE profil_ychenika (
    id_profilya SERIAL PRIMARY KEY,
    kolichestvo_yrokov int,
    kolvo_kyrsov int
);
CREATE TABLE prepodov_v_kyrse(
    id_ychitel int,
    id_kyrsa int,
    Foreign Key (id_ychitel) REFERENCES ychitel(id_ychitel),
    Foreign Key (id_kyrsa) REFERENCES kyrsi(id_kyrsa)
);
CREATE TABLE ychenik_v_kyrse(
    id_profilya int,
    id_kyrsa int,
    Foreign Key (id_profilya) REFERENCES profil_ychenika(id_profilya),
    Foreign Key (id_kyrsa) REFERENCES kyrsi(id_kyrsa)
);
